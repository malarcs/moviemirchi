}
<div class="movies">
</div>
@Html.Hidden("CurrentMovies", null, new { @id = "CurrentMovies" })
@Html.Hidden("UpcomingMovies", null, new { @id = "UpcomingMovies" })
@Html.Hidden("Popular", null, new { @id = "Popular" })
