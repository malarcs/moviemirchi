@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_MovieLayout.cshtml";
}

<h2>Test</h2>

<div class="panel-body" id="singupinfo">
    @*loging dialog*@
    @using (Html.BeginForm())
    {  
                <a data-toggle="modal" href="#ChangePassword"
                   role="alert"  tabindex="-1">Change Password</a>
        <div id="div1">
            <div class="modal fade" id="ChangePassword" tabindex="-2" role="dialog" aria-labelledby="myModalLabel2" aria-haspopup="false">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="ClearPasswordFields();">
                                &times;
                            </button>
                            <h3 class="modal-title">
                                Login
                            </h3>
                        </div>
                        <div class="modal-body">
                            <div class="Record">
                                <div class="ErrorContainer" id="changePasswordStatus" style="display: none">
                                </div>
                            </div>
                            <div class="Record">
                                <div class="Column2">
                                    <input type="password" id="txtOldPassword" style="min-height: 30px;" placeholder="Old Password" />
                                </div>
                            </div>
                            <div class="Record">
                                <div class="Column2">
                                    <input type="password" id="txtNewPassword" style="min-height: 30px;" placeholder="Type New Password" />
                                </div>
                            </div>
                            <div class="Record">
                                <div class="Column2">
                                    <input type="password" id="txtRetypeNewPassword" style="min-height: 30px;" placeholder="Confirm New Password" />
                                </div>
                            </div>
                            <div class="Record">
                                <div class="Column2">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <a href="Javascript:void(0)" class="btn" data-dismiss="modal" onclick="$('#ChangePassword').fadeOut(600);"
                               title="click to close popup">Close</a>
                            
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
        </div>
    
      
    }
</div>


<script type="text/javascript">
    /*
    $("#check").click(function () {
        $("#div1").fadeIn();
        $("#div1").fadeIn("slow");
        $("#div1").fadeIn(3000);
    });
    */

    function ChangePassword() {
        if ($("#txtOldPassword").val() == "") {
            $("#txtOldPassword").focus();
            //alert("Please enter old password");
            $("#changePasswordStatus").html("Please enter old password");
            $("#changePasswordStatus").css("display", "block");
            return false;
        }

        if ($("#txtNewPassword").val() == "") {
            $("#txtNewPassword").focus();
            //alert("Please enter new password");
            $("#changePasswordStatus").html("Please enter new password");
            $("#changePasswordStatus").css("display", "block");
            return false;
        }

        if ($("#txtRetypeNewPassword").val() == "") {
            $("#txtRetypeNewPassword").focus();
            //alert("Please re-type new password");
            $("#changePasswordStatus").html("Please re-enter new password");
            $("#changePasswordStatus").css("display", "block");
            return false;
        }

        if ($("#txtRetypeNewPassword").val() != $("#txtNewPassword").val()) {
            //alert("New password and retype password not match");
            $("#changePasswordStatus").html("New password and confirm password not matched");
            $("#changePasswordStatus").css("display", "block");
            $("#txtRetypeNewPassword").val("");
            $("#txtRetypeNewPassword").focus();
            return false;
        }
    }
</script>


@*loging dialog end*@